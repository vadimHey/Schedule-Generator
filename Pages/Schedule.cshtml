@page
@model ScheduleModel
@{
	ViewData["Title"] = "Генератор расписания";
	var i = 1;
}

<div class="row">
	<div class="col-6">
		<div class="card mb-2">
			<div class="card-header">
				<h3>Добавить событие</h3>
			</div>
			<div class="card-body">
				<form method="get" class="mb-2">
					<div class="text-center mb-2">
                        <a asp-page="./Schedule" asp-route-SelectedDate="@(Model.SelectedDate.AddDays(-1).ToString("yyyy-MM-dd"))" class="btn btn-outline-primary btn-sm me-2">
                            ← Пред. день
                        </a>
                        <a asp-page="./Schedule" asp-route-SelectedDate="@(Model.SelectedDate.AddDays(1).ToString("yyyy-MM-dd"))" class="btn btn-outline-primary btn-sm">
                            След. день →
                        </a>
					</div>
					<div>
						<input asp-for="SelectedDate" type="date" class="form-control" />
					</div>
				</form>

				<form method="post">
					<div class="mb-2">
						<input asp-for="Item.Title" placeholder="Событие" autocomplete="off" class="form-control" />
						<span asp-validation-for="Item.Title" class="text-danger"></span>
					</div>
					<div class="mb-2">
						<label class="form-label">Начало</label>
						<input asp-for="Item.StartTime" type="time" class="form-control" />
						<span asp-validation-for="Item.StartTime" class="text-danger"></span>
					</div>
					<div class="mb-2">
						<label class="form-label">Окончание</label>
						<input asp-for="Item.EndTime" type="time" class="form-control" />
						<span asp-validation-for="Item.EndTime" class="text-danger"></span>
					</div>
					<div class="mb-2">
						<input type="hidden" asp-for="SelectedDate" />
						<button class="btn btn-primary" type="submit">Добавить</button>
					</div>
				</form>
			</div>
		</div>
	</div>

    <div class="col-6">
        <div class="card mb-2">
            <div class="card-header">
                <h3>Ваше расписание на @Model.SelectedDate.ToString("dd.MM.yyyy")</h3>
            </div>
            <div class="card-body">
                @if (Model.Schedule.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Событие</th>
                                <th>Начало</th>
                                <th>Окончание</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model.Schedule)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@schedule.Title</td>
                                    <td>@schedule.StartTime</td>
                                    <td>@schedule.EndTime</td>
                                    <td>
                                        <button type="button"
                                                class="btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editModal"
                                                data-id="@schedule.Id"
                                                data-title="@schedule.Title"
                                                data-start="@schedule.StartTime.ToString("HH:mm")"
                                                data-end="@schedule.EndTime.ToString("HH:mm")">
                                            ⋮
                                        </button>

                                        <form method="post" asp-page-handler="DeleteItem" style="display:inline;">
                                            <input type="hidden" name="id" value="@schedule.Id" />
                                            <button type="submit" class="btn">❌</button>
                                        </form>

                                        <div class="modal fade" id="editModal" tabindex="-1"
                                             aria-hidden="true"
                                             data-show="@((ViewData["ShowEditModal"] ?? false).ToString().ToLower())">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Редактировать событие</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                                                    </div>

                                                    <form method="post" asp-page-handler="Edit">
                                                        <div class="modal-body">
                                                            <input type="hidden" asp-for="EditItem.Id" id="edit-id" />
                                                            <input type="hidden" asp-for="SelectedDate" />

                                                            <div class="mb-2">
                                                                <label class="form-label">Событие</label>
                                                                <input asp-for="EditItem.Title" id="edit-title" class="form-control" />
                                                                <span asp-validation-for="EditItem.Title" class="text-danger"></span>
                                                            </div>

                                                            <div class="mb-2">
                                                                <label class="form-label">Начало</label>
                                                                <input asp-for="EditItem.StartTime" id="edit-start" type="time" class="form-control" />
                                                                <span asp-validation-for="EditItem.StartTime" class="text-danger"></span>
                                                            </div>

                                                            <div class="mb-2">
                                                                <label class="form-label">Окончание</label>
                                                                <input asp-for="EditItem.EndTime" id="edit-end" type="time" class="form-control" />
                                                                <span asp-validation-for="EditItem.EndTime" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                                            <button type="submit" class="btn btn-primary">Сохранить</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center mt-2">События отсутствуют</p>
                }
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />