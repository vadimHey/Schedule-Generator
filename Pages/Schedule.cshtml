@page
@model ScheduleModel
@{
    ViewData["Title"] = "Генератор расписания";
}

<h2>Генератор расписания</h2>

<form method="post">
    <label asp-for="Items">Введите предметы:</label><br />
    <input asp-for="Items"/><br />
    <button type="submit">Сгенерировать</button><br /><br />
</form>

@if (Model.Schedules.Any())
{
    <h3>Ваше расписание:</h3>
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>#</th>
                <th>Предмет</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Schedules.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model.Schedules[i]</td>
                </tr>
            }
        </tbody>
    </table>
}
